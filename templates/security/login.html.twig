{% extends 'base.html.twig' %}

{% block title %}Connexion - D2E SHOP{% endblock %}

{% block body %}
<div class="container py-section">
    <div style="max-width: 480px; margin: 0 auto;">
        <div class="card-minimal">
            <div style="text-align: center; margin-bottom: var(--spacing-xl);">
                <h1 class="display-4" style="margin-bottom: var(--spacing-xs);">
                    Connexion
                </h1>
                <p class="text-secondary-apple">Accédez à votre compte</p>
            </div>

            {% if error %}
                <div class="alert-apple alert-apple-error" style="margin-bottom: var(--spacing-lg);">
                    <i class="bi bi-exclamation-circle"></i>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post">
                <div style="margin-bottom: var(--spacing-md);">
                    <label for="inputEmail" class="form-label-apple">Email</label>
                    <input type="email"
                           name="_username"
                           id="inputEmail"
                           class="form-control-apple"
                           value="{{ last_username }}"
                           required
                           autofocus
                           placeholder="votre@email.com">
                </div>

                <div style="margin-bottom: var(--spacing-md);">
                    <label for="inputPassword" class="form-label-apple">Mot de passe</label>
                    <input type="password"
                           name="_password"
                           id="inputPassword"
                           class="form-control-apple"
                           required
                           placeholder="••••••••">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div style="margin-bottom: var(--spacing-lg);">
                    <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                        <input type="checkbox"
                               name="_remember_me"
                               id="remember_me"
                               style="width: 18px; height: 18px; cursor: pointer;">
                        <span style="font-size: 15px; color: var(--text-secondary);">
                            Se souvenir de moi
                        </span>
                    </label>
                </div>

                <button type="submit" class="btn-apple btn-apple-primary btn-apple-lg" style="width: 100%; margin-bottom: var(--spacing-md);">
                    Se connecter
                </button>

                <div style="text-align: center;">
                    <p style="color: var(--text-secondary); margin: 0;">
                        Pas encore de compte ?
                        <a href="{{ path('app_register') }}" style="color: var(--accent-blue); text-decoration: none; font-weight: 500;">
                            Inscrivez-vous
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

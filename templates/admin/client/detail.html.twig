{% extends 'admin_base.html.twig' %}

{% block title %}Client {{ client.fullName }} - Admin{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="display-5 fw-bold mb-5">
        <i class="bi bi-person"></i> Client: <span class="text-gradient">{{ client.fullName }}</span>
    </h1>

    <div class="row">
        <div class="col-lg-4 mb-4">
            {# Client Info #}
            <div class="glass-card p-4">
                <div class="text-center mb-4">
                    <div class="rounded-circle d-inline-flex align-items-center justify-content-center fw-bold text-white mb-3"
                         style="width: 80px; height: 80px; font-size: 32px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        {{ client.firstName|first|upper }}{{ client.lastName|first|upper }}
                    </div>
                    <h4 class="mb-1">{{ client.fullName }}</h4>
                    {% if 'ROLE_ADMIN' in client.roles %}
                    <span class="badge bg-warning">Administrateur</span>
                    {% endif %}
                </div>

                <div class="mb-3">
                    <div class="text-secondary small mb-1">Email</div>
                    <div><i class="bi bi-envelope"></i> {{ client.email }}</div>
                </div>

                <div class="mb-3">
                    <div class="text-secondary small mb-1">Téléphone</div>
                    <div>
                        {% if client.phone %}
                            <i class="bi bi-telephone"></i> {{ client.phone }}
                        {% else %}
                            <span class="text-secondary fst-italic">Non renseigné</span>
                        {% endif %}
                    </div>
                </div>

                <div class="mb-3">
                    <div class="text-secondary small mb-1">Statut du compte</div>
                    <div>
                        {% if client.isVerified %}
                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Vérifié</span>
                        {% else %}
                            <span class="badge bg-secondary"><i class="bi bi-clock"></i> Non vérifié</span>
                        {% endif %}
                    </div>
                </div>

                <div class="mb-0">
                    <div class="text-secondary small mb-1">Inscrit le</div>
                    <div>{{ client.createdAt|date('d/m/Y à H:i') }}</div>
                </div>
            </div>

            {# Statistics #}
            <div class="glass-card p-4 mt-4">
                <h5 class="mb-3">Statistiques</h5>

                <div class="d-flex justify-content-between align-items-center mb-3 p-3 rounded" style="background: rgba(59, 130, 246, 0.1);">
                    <div>
                        <div class="text-secondary small">Commandes</div>
                        <div class="h3 mb-0">{{ client.orders|length }}</div>
                    </div>
                    <i class="bi bi-receipt" style="font-size: 32px; opacity: 0.3;"></i>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3 p-3 rounded" style="background: rgba(16, 185, 129, 0.1);">
                    <div>
                        <div class="text-secondary small">Total dépensé</div>
                        <div class="h3 mb-0">{{ totalSpent|number_format(2, ',', ' ') }} €</div>
                    </div>
                    <i class="bi bi-cash-stack" style="font-size: 32px; opacity: 0.3;"></i>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3 p-3 rounded" style="background: rgba(139, 92, 246, 0.1);">
                    <div>
                        <div class="text-secondary small">Wishlist</div>
                        <div class="h3 mb-0">{{ client.wishlist|length }}</div>
                    </div>
                    <i class="bi bi-heart-fill" style="font-size: 32px; opacity: 0.3;"></i>
                </div>

                <div class="d-flex justify-content-between align-items-center p-3 rounded" style="background: rgba(234, 179, 8, 0.1);">
                    <div>
                        <div class="text-secondary small">Avis</div>
                        <div class="h3 mb-0">{{ client.reviews|length }}</div>
                    </div>
                    <i class="bi bi-star-fill" style="font-size: 32px; opacity: 0.3;"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            {# Recent Orders #}
            <div class="glass-card p-4 mb-4">
                <h5 class="mb-3">Dernières commandes</h5>

                {% if client.orders|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle">
                        <thead>
                            <tr>
                                <th>N° Commande</th>
                                <th>Date</th>
                                <th>Montant</th>
                                <th>Statut</th>
                                <th class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for order in client.orders|slice(0, 10) %}
                            <tr>
                                <td>
                                    <strong class="text-gradient">{{ order.orderNumber }}</strong>
                                </td>
                                <td>
                                    <div>{{ order.createdAt|date('d/m/Y') }}</div>
                                    <small class="text-secondary">{{ order.createdAt|date('H:i') }}</small>
                                </td>
                                <td><strong>{{ order.total }} €</strong></td>
                                <td>
                                    {% if order.status == 'delivered' %}
                                        <span class="badge bg-success">Livrée</span>
                                    {% elseif order.status == 'shipped' %}
                                        <span class="badge" style="background: rgba(139, 92, 246, 0.2); color: #8b5cf6;">Expédiée</span>
                                    {% elseif order.status == 'processing' %}
                                        <span class="badge" style="background: rgba(59, 130, 246, 0.2); color: #3b82f6;">En cours</span>
                                    {% elseif order.status == 'cancelled' %}
                                        <span class="badge bg-danger">Annulée</span>
                                    {% else %}
                                        <span class="badge bg-secondary">En attente</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <a href="{{ path('admin_order_detail', {id: order.id}) }}" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-3 text-secondary mb-3"></i>
                    <p class="text-secondary">Aucune commande</p>
                </div>
                {% endif %}
            </div>

            {# Addresses #}
            <div class="glass-card p-4">
                <h5 class="mb-3">Adresses ({{ client.addresses|length }})</h5>

                {% if client.addresses|length > 0 %}
                <div class="row">
                    {% for address in client.addresses %}
                    <div class="col-md-6 mb-3">
                        <div class="p-3 rounded border border-secondary">
                            {% if address.isDefault %}
                            <span class="badge bg-primary mb-2">Adresse par défaut</span>
                            {% endif %}
                            <div class="mb-1"><strong>{{ address.firstName }} {{ address.lastName }}</strong></div>
                            <div class="small">
                                <div>{{ address.street }}</div>
                                {% if address.streetComplement %}
                                <div>{{ address.streetComplement }}</div>
                                {% endif %}
                                <div>{{ address.postalCode }} {{ address.city }}</div>
                                <div>{{ address.country }}</div>
                                {% if address.phone %}
                                <div class="mt-1"><i class="bi bi-telephone"></i> {{ address.phone }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="text-center py-5">
                    <i class="bi bi-geo-alt display-3 text-secondary mb-3"></i>
                    <p class="text-secondary">Aucune adresse enregistrée</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('admin_clients_list') }}" class="btn btn-glass">
            <i class="bi bi-arrow-left"></i> Retour aux clients
        </a>
    </div>
</div>
{% endblock %}

{% extends 'admin_base.html.twig' %}

{% block title %}Commande {{ order.orderNumber }} - Admin{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="display-5 fw-bold mb-5">
        <i class="bi bi-receipt"></i> Commande <span class="text-gradient">{{ order.orderNumber }}</span>
    </h1>

    <div class="row">
        <div class="col-lg-8">
            {# Order Items #}
            <div class="glass-card p-4 mb-4">
                <h5 class="mb-3">Articles commandés</h5>
                <div class="table-responsive">
                    <table class="table table-dark align-middle">
                        <thead>
                            <tr>
                                <th>Produit</th>
                                <th>Prix unitaire</th>
                                <th>Quantité</th>
                                <th class="text-end">Sous-total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in order.items %}
                            <tr>
                                <td>
                                    <div><strong>{{ item.productName }}</strong></div>
                                    <div class="small text-secondary">
                                        Taille: {{ item.size }} • Couleur: {{ item.color }}
                                    </div>
                                    {% if item.productSku %}
                                    <div class="small text-secondary">SKU: {{ item.productSku }}</div>
                                    {% endif %}
                                </td>
                                <td>{{ item.unitPrice }} €</td>
                                <td>{{ item.quantity }}</td>
                                <td class="text-end"><strong class="text-gradient">{{ item.subtotal }} €</strong></td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            {# Shipping Address #}
            <div class="glass-card p-4 mb-4">
                <h5 class="mb-3">Adresse de livraison</h5>
                <div>
                    <div class="mb-1"><strong>{{ order.shippingFirstName }} {{ order.shippingLastName }}</strong></div>
                    <div>{{ order.shippingStreet }}</div>
                    {% if order.shippingStreetComplement %}
                    <div>{{ order.shippingStreetComplement }}</div>
                    {% endif %}
                    <div>{{ order.shippingPostalCode }} {{ order.shippingCity }}</div>
                    <div>{{ order.shippingCountry }}</div>
                    {% if order.shippingPhone %}
                    <div class="mt-2"><i class="bi bi-telephone"></i> {{ order.shippingPhone }}</div>
                    {% endif %}
                </div>
            </div>

            {# Notes #}
            {% if order.notes %}
            <div class="glass-card p-4">
                <h5 class="mb-3">Notes</h5>
                <div class="p-3 rounded" style="background: rgba(255,255,255,0.05);">
                    {{ order.notes }}
                </div>
            </div>
            {% endif %}
        </div>

        <div class="col-lg-4">
            {# Order Summary #}
            <div class="glass-card p-4 mb-4">
                <h5 class="mb-3">Récapitulatif</h5>

                <div class="d-flex justify-content-between mb-2">
                    <span class="text-secondary">Sous-total</span>
                    <span>{{ order.subtotal }} €</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-secondary">Livraison</span>
                    <span>{{ order.shippingCost }} €</span>
                </div>
                {% if order.discount != '0.00' %}
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-secondary">Réduction</span>
                    <span class="text-success">-{{ order.discount }} €</span>
                </div>
                {% endif %}

                <hr style="border-color: rgba(255,255,255,0.1);">

                <div class="d-flex justify-content-between align-items-center">
                    <span class="h5 mb-0">Total</span>
                    <span class="h3 mb-0 text-gradient">{{ order.total }} €</span>
                </div>
            </div>

            {# Order Status #}
            <div class="glass-card p-4 mb-4">
                <h5 class="mb-3">Statut de la commande</h5>

                <form method="post" action="{{ path('admin_order_update_status', {id: order.id}) }}">
                    <select name="status" class="form-select form-control-glass mb-3">
                        <option value="pending" {% if order.status == 'pending' %}selected{% endif %}>En attente</option>
                        <option value="processing" {% if order.status == 'processing' %}selected{% endif %}>En cours</option>
                        <option value="shipped" {% if order.status == 'shipped' %}selected{% endif %}>Expédiée</option>
                        <option value="delivered" {% if order.status == 'delivered' %}selected{% endif %}>Livrée</option>
                        <option value="cancelled" {% if order.status == 'cancelled' %}selected{% endif %}>Annulée</option>
                    </select>
                    <button type="submit" class="btn btn-primary-glow w-100">
                        Mettre à jour le statut
                    </button>
                </form>
            </div>

            {# Payment Status #}
            <div class="glass-card p-4 mb-4">
                <h5 class="mb-3">Paiement</h5>

                <div class="mb-3">
                    <div class="text-secondary small mb-1">Méthode de paiement</div>
                    <div>
                        {% if order.paymentMethod == 'kkiapay' %}
                            <i class="bi bi-credit-card"></i> KKiaPay
                        {% elseif order.paymentMethod == 'cash_on_delivery' %}
                            <i class="bi bi-cash"></i> Paiement à la livraison
                        {% else %}
                            {{ order.paymentMethod ?? 'N/A' }}
                        {% endif %}
                    </div>
                </div>

                {% if order.transactionId %}
                <div class="mb-3">
                    <div class="text-secondary small mb-1">Transaction ID</div>
                    <div class="p-2 rounded" style="background: rgba(255,255,255,0.05); font-family: monospace; font-size: 12px;">
                        {{ order.transactionId }}
                    </div>
                </div>
                {% endif %}

                <form method="post" action="{{ path('admin_order_update_payment_status', {id: order.id}) }}">
                    <label class="form-label">Statut du paiement</label>
                    <select name="paymentStatus" class="form-select form-control-glass mb-3">
                        <option value="pending" {% if order.paymentStatus == 'pending' %}selected{% endif %}>En attente</option>
                        <option value="paid" {% if order.paymentStatus == 'paid' %}selected{% endif %}>Payé</option>
                        <option value="failed" {% if order.paymentStatus == 'failed' %}selected{% endif %}>Échoué</option>
                        <option value="refunded" {% if order.paymentStatus == 'refunded' %}selected{% endif %}>Remboursé</option>
                    </select>
                    <button type="submit" class="btn btn-glass w-100">
                        Mettre à jour
                    </button>
                </form>
            </div>

            {# Order Info #}
            <div class="glass-card p-4">
                <h5 class="mb-3">Informations</h5>

                <div class="mb-2">
                    <div class="text-secondary small">Date de commande</div>
                    <div><strong>{{ order.createdAt|date('d/m/Y H:i') }}</strong></div>
                </div>
                <div class="mb-2">
                    <div class="text-secondary small">Client</div>
                    <div><strong>{{ order.user.fullName }}</strong></div>
                </div>
                <div>
                    <div class="text-secondary small">Email</div>
                    <div>{{ order.user.email }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('admin_orders') }}" class="btn btn-glass">
            <i class="bi bi-arrow-left"></i> Retour aux commandes
        </a>
    </div>
</div>
{% endblock %}

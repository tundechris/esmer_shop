{% extends 'base.html.twig' %}

{% block title %}Commande confirmée - D2E SHOP{% endblock %}

{% block head_js %}
<style>
/* Responsive confirmation page */
@media (max-width: 768px) {
    .confirmation-buttons {
        flex-direction: column !important;
    }

    .confirmation-buttons a {
        width: 100% !important;
    }
}
</style>
{% endblock %}

{% block body %}
<div class="container py-section">
    <div style="max-width: 600px; margin: 0 auto; text-align: center;">
        <div style="width: 80px; height: 80px; background: rgba(52, 199, 89, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto var(--spacing-lg);">
            <i class="bi bi-check-circle-fill" style="font-size: 48px; color: var(--accent-green);"></i>
        </div>

        <h1 class="display-3" style="margin-bottom: var(--spacing-sm);">Commande confirmée !</h1>

        <p style="font-size: 21px; color: var(--text-secondary); margin-bottom: var(--spacing-xl);">
            Merci pour votre commande. Vous allez recevoir un email de confirmation.
        </p>

        <div class="card-minimal no-hover" style="text-align: left; margin-bottom: var(--spacing-lg);">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--spacing-md);">
                <div>
                    <div style="font-size: 13px; color: var(--text-secondary); margin-bottom: 4px;">Numéro de commande</div>
                    <div style="font-size: 21px; font-weight: 600; letter-spacing: 0.02em;">{{ orderNumber }}</div>
                </div>
                <span class="badge-apple badge-apple-blue">En cours</span>
            </div>

            <div class="divider-apple"></div>

            <div style="margin-top: var(--spacing-md);">
                <div style="font-size: 15px; color: var(--text-secondary); margin-bottom: 8px;">
                    <i class="bi bi-info-circle"></i> Vous pouvez suivre votre commande depuis votre compte
                </div>
            </div>
        </div>

        <div class="confirmation-buttons" style="display: flex; gap: var(--spacing-sm); justify-content: center;">
            <a href="{{ path('app_orders') }}" class="btn-apple btn-apple-primary">
                Voir mes commandes
            </a>
            <a href="{{ path('app_products') }}" class="btn-apple btn-apple-secondary">
                Continuer mes achats
            </a>
        </div>
    </div>
</div>
{% endblock %}

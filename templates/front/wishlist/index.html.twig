{% extends 'base.html.twig' %}

{% block title %}Ma Wishlist - D2E SHOP{% endblock %}

{% block body %}
<div class="container py-section">
    <h1 class="display-4" style="margin-bottom: var(--spacing-lg);">
        Ma <span class="text-blue-apple">Wishlist</span>
    </h1>

    {% if wishlist|length > 0 %}
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: var(--spacing-lg);">
            {% for product in wishlist %}
                <div class="product-card-apple scroll-reveal">
                    {% if product.isNewArrival %}
                    <div class="product-badge new">Nouveau</div>
                    {% elseif product.discountPrice %}
                    <div class="product-badge sale">-{{ (((product.price - product.discountPrice) / product.price) * 100)|round }}%</div>
                    {% endif %}

                    <div class="product-image-wrapper">
                        <a href="{{ path('app_product_detail', {slug: product.slug}) }}">
                            <img src="{{ product.images[0] }}" alt="{{ product.name }}" class="product-image">
                        </a>
                    </div>

                    <div class="product-content">
                        <div style="font-size: 13px; color: var(--text-secondary); margin-bottom: 4px;">
                            {{ product.brand.name }}
                        </div>
                        <h3 style="font-size: 17px; font-weight: 600; margin-bottom: 8px;">
                            <a href="{{ path('app_product_detail', {slug: product.slug}) }}" style="color: var(--text-primary);">
                                {{ product.name }}
                            </a>
                        </h3>

                        <div style="margin-bottom: var(--spacing-sm);">
                            <span class="badge-apple badge-apple-gray">{{ product.category.name }}</span>
                        </div>

                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                {% if product.discountPrice %}
                                    <div style="font-size: 13px; text-decoration: line-through; color: var(--text-tertiary);">
                                        {{ product.price }} €
                                    </div>
                                    <div style="font-size: 21px; font-weight: 600; color: var(--accent-blue);">
                                        {{ product.finalPrice }} €
                                    </div>
                                {% else %}
                                    <div style="font-size: 21px; font-weight: 600; color: var(--text-primary);">
                                        {{ product.price }} €
                                    </div>
                                {% endif %}
                            </div>

                            <button class="btn-apple btn-apple-secondary btn-apple-sm"
                                    onclick="removeFromWishlist({{ product.id }})">
                                <i class="bi bi-heart-fill"></i>
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="card-minimal no-hover" style="text-align: center; padding: var(--spacing-2xl);">
            <i class="bi bi-heart" style="font-size: 64px; color: var(--text-tertiary); margin-bottom: var(--spacing-md);"></i>
            <h3 style="margin-bottom: var(--spacing-sm);">Votre wishlist est vide</h3>
            <p class="text-secondary-apple">Ajoutez vos produits préférés à votre wishlist</p>
            <a href="{{ path('app_products') }}" class="btn-apple btn-apple-primary" style="margin-top: var(--spacing-md);">
                Découvrir les produits
            </a>
        </div>
    {% endif %}
</div>

<script>
async function removeFromWishlist(productId) {
    try {
        const response = await fetch(`/wishlist/toggle/${productId}`, {
            method: 'POST'
        });
        const data = await response.json();

        if (data.success) {
            window.location.reload();
        }
    } catch (error) {
        alert('Erreur lors de la suppression');
    }
}
</script>
{% endblock %}
